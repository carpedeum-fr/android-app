<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
        >
    <ImageView
        android:id="@+id/imageView_godVoicePic_com_voice_godvoice_evangile_listen"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@+id/imageView_controls_com_voice_godvoice_evangile_listen"
        android:padding="@dimen/little_margin"
        />
    <ImageView
        android:id="@+id/imageView_controls_com_voice_godvoice_evangile_listen"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:src="@drawable/audio_player_play"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/main_margin"
        android:layout_marginRight="@dimen/main_margin"
        android:layout_marginBottom="@dimen/little_margin" />
    <SeekBar
        android:id="@+id/seekBar_listen_com_voice_godvoice_evangile_listen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView_controls_com_voice_godvoice_evangile_listen"
        android:layout_toEndOf="@+id/imageView_controls_com_voice_godvoice_evangile_listen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/main_margin"
        android:layout_marginEnd="@dimen/main_margin"
        android:layout_marginBottom="@dimen/little_margin" />
</RelativeLayout>