<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dip"
    android:orientation="horizontal"
    android:background="@drawable/subheader_background"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <Button
        android:id="@+id/button_date_com_classifieds_menu"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:text="@string/PRAYERS_LIST_BY_DATE"
        android:layout_marginLeft="50dip"
        android:padding="2dip"
        android:textColor="@color/black"
        android:background="@drawable/segment_on_single" />
    <Button
        android:id="@+id/button_distance_com_classifieds_menu"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:text="@string/PRAYERS_LIST_BY_DISTANCE"
        android:padding="2dip"
        android:layout_marginRight="50dip"
        android:textColor="@color/white"
        android:background="@drawable/roundedcornergristransparentright" />
</LinearLayout>