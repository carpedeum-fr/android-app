<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dip"
        android:background="@color/background1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textView_infos_com_user_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ACCOUNT_CHANGEPASSWORD_INFO"
                android:textColor="@color/black"
                android:textSize="@dimen/standardText"
                android:padding="@dimen/little_margin"
                />
            <LinearLayout
                android:id="@+id/linearLayout_old_com_user_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingTop="@dimen/little_margin"
                android:paddingLeft="@dimen/little_margin"
                android:paddingRight="@dimen/little_margin"
                >
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:text="@string/ACCOUNT_CHANGEPASSWORD_INPUT_OLDPASSWORD"
                    android:textSize="@dimen/standardText"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:id="@+id/editText_oldpasswd_com_user_change_password"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:hint="@string/ACCOUNT_CHANGEPASSWORD_INPUT_OLDPASSWORD_PLACEHOLDER"
                    android:layout_weight="70"
                    android:inputType="textPassword" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_new_com_user_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="@dimen/little_margin"
                android:paddingRight="@dimen/little_margin"
                >
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:text="@string/ACCOUNT_CHANGEPASSWORD_INPUT_NEWPASSWORD1"
                    android:textSize="@dimen/standardText"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:id="@+id/editText_newpasswd_com_user_change_password"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:inputType="textPassword"
                    android:hint="@string/ACCOUNT_CHANGEPASSWORD_INPUT_NEWPASSWORD1_PLACEHOLDER"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_newr_com_user_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="@dimen/little_margin"
                android:paddingRight="@dimen/little_margin"
                android:paddingBottom="@dimen/little_margin"
                >
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    />
                <EditText
                    android:id="@+id/editText_newpasswdr_com_user_change_password"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:inputType="textPassword"
                    android:hint="@string/ACCOUNT_CHANGEPASSWORD_INPUT_NEWPASSWORD2_PLACEHOLDER"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/subheader_background"
        >
        <Button
            android:id="@+id/button_save_com_user_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SAVE"
            android:layout_centerVertical="true"
            android:textSize="@dimen/standardText"
            android:layout_alignParentRight="true"
            android:background="@drawable/segment_on_single"
            />
    </RelativeLayout>
</RelativeLayout>