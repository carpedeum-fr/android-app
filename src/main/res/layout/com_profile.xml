<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background1"
        android:layout_marginBottom="50dip" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/textView_num_visited_com_profile"
                android:text="@string/HOME_VISIT_0_1"
                android:layout_width="match_parent"
                android:textColor="@color/gris40"
                android:background="@drawable/subheader_background"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
            <ImageView
                android:visibility="visible"
                android:id="@+id/imageView_headershadow_com_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:background="@drawable/header_shadow"
                />
            <LinearLayout
                android:id="@+id/linearLayout_my_profile_com_profile"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedcornerquestions_home"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="15dip" >
                <ImageView
                    android:id="@+id/imageView_profilepic_com_profile"
                    android:layout_width="0dip"
                    android:layout_weight="15"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/MonProfil" />
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:text="@string/HOME_MYLIST_PROFILE"
                    android:textColor="@color/black"
                    android:textSize="@dimen/standardText"
                    android:padding="10dip" />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/main_margin"
                    android:layout_marginRight="@dimen/main_margin"
                    android:layout_marginTop="@dimen/main_margin"
                    >
                <ImageView
                    android:id="@+id/imageView_new_messages_com_profile"
                    android:layout_width="0dip"
                    android:layout_weight="30"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dip"
                    android:src="@drawable/home_icon_messages"
                    android:contentDescription="@string/HOME_NUM_MESSAGES" />
                <ImageView
                    android:id="@+id/imageView_connected_around_com_profile"
                    android:layout_width="0dip"
                    android:layout_weight="30"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dip"
                    android:src="@drawable/home_icon_neighbors"
                    android:contentDescription="@string/HOME_NUM_NEIGHBORS" />
                <ImageView
                    android:id="@+id/imageView_connected_contacts_com_profile"
                    android:layout_width="0dip"
                    android:layout_weight="30"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_icon_contacts"
                    android:contentDescription="@string/HOME_NUM_CONTACTS" />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/main_margin"
                    android:layout_marginRight="@dimen/main_margin"
                    >
                <TextView
                        android:id="@+id/textView_new_messages_com_profile"
                        android:layout_width="0dip"
                        android:layout_weight="30"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dip"
                        android:text="@string/HOME_PROFILE_MY_MESSAGES"
                        android:gravity="center"
                        android:textColor="@color/profileGreyText"
                        android:textAllCaps="true"
                        android:textSize="@dimen/standardText"
                        />
                <TextView
                        android:id="@+id/textView_connected_around_com_profile"
                        android:layout_width="0dip"
                        android:layout_weight="30"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dip"
                        android:src="@drawable/home_icon_neighbors"
                        android:text="@string/HOME_PROFILE_MY_NEIGHBORS"
                        android:textColor="@color/profileGreyText"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textSize="@dimen/standardText"
                        />
                <TextView
                    android:id="@+id/textView_connected_contacts_com_profile"
                    android:layout_width="0dip"
                    android:layout_weight="30"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_icon_contacts"
                    android:text="@string/HOME_PROFILE_MY_CONTACTS"
                    android:textColor="@color/profileGreyText"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textSize="@dimen/standardText" />
            </LinearLayout>
            <Button
                    android:id="@+id/button_publish_com_profile"
                    android:layout_marginTop="@dimen/main_margin"
                    android:layout_marginRight="@dimen/main_margin"
                    android:layout_marginLeft="@dimen/main_margin"
                    android:layout_marginBottom="1dip"
                    android:padding="7dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/HOME_PUBLISH_UPDATE"
                    android:background="@drawable/roundedcornerup_home"
                    android:textSize="@dimen/standardText"
                    android:textColor="@color/black"
                    />
            <Button
                    android:id="@+id/button_myprayers_com_profile"
                    android:layout_marginRight="@dimen/main_margin"
                    android:layout_marginLeft="@dimen/main_margin"
                    android:layout_marginBottom="1dip"
                    android:padding="7dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/HOME_MYLIST_PRAYERS"
                    android:background="@color/white"
                    android:textSize="@dimen/standardText"
                    android:textColor="@color/black"
                    />
            <Button
                    android:id="@+id/button_myclassifieds_com_profile"
                    android:layout_marginRight="@dimen/main_margin"
                    android:layout_marginLeft="@dimen/main_margin"
                    android:layout_marginBottom="1dip"
                    android:padding="7dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/HOME_MYLIST_CLASSIFIEDS"
                    android:background="@drawable/roundedcornerdown_home"
                    android:textSize="@dimen/standardText"
                    android:textColor="@color/black"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/HOME_TITLE_PLACES"
                    android:textColor="@color/profileGreyText"
                    android:textSize="@dimen/standardText"
                    android:layout_margin="@dimen/little_margin"
                    android:gravity="center"
                    android:textAllCaps="true"
                    />
            <LinearLayout
                android:id="@+id/linearLayout_places_com_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/little_margin" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView_online_com_profile"
                    android:layout_width="0dip"
                    android:layout_weight="30"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dip"
                    android:src="@drawable/switch_off"
                    android:contentDescription="@string/HOME_SWITCH_APPEARS_OFFLINE" />
                <ImageView
                        android:id="@+id/imageView_gps_com_profile"
                        android:layout_width="0dip"
                        android:layout_weight="30"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dip"
                        android:src="@drawable/switch_off"
                        android:contentDescription="@string/HOME_SWITCH_GPS_IS_OFF"
                        />
                <ImageView
                        android:id="@+id/imageView_push_com_profile"
                        android:layout_width="0dip"
                        android:layout_weight="30"
                        android:layout_height="wrap_content"
                        android:src="@drawable/switch_off"
                        android:contentDescription="@string/HOME_SWITCH_PUSH_IS_OFF"
                        />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    >
                <TextView
                        android:id="@+id/textView_online_com_profile"
                        android:layout_width="0dip"
                        android:layout_weight="30"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:text="@string/HOME_SWITCH_APPEARS_OFFLINE"
                        android:gravity="center"
                        android:textColor="@color/profileGreyText"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        />
                <TextView
                        android:id="@+id/textView_gps_com_profile"
                        android:layout_width="0dip"
                        android:layout_weight="30"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:src="@drawable/home_icon_neighbors"
                        android:text="@string/HOME_SWITCH_GPS_IS_OFF"
                        android:textColor="@color/profileGreyText"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        />
                <TextView
                        android:id="@+id/textView_push_com_profile"
                        android:layout_width="0dip"
                        android:layout_weight="30"
                        android:layout_height="wrap_content"
                        android:src="@drawable/home_icon_contacts"
                        android:text="@string/HOME_SWITCH_PUSH_IS_OFF"
                        android:textColor="@color/profileGreyText"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        />
            </LinearLayout>
            <include layout="@layout/com_profile_options" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:contentDescription="@string/header"
                android:src="@drawable/footer_shadow"
                />
            <include layout="@layout/com_carpedeum_footer"/>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/com_carpedeum_home_buttons" />
</RelativeLayout>