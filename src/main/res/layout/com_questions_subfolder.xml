<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
        >

    <TextView
            android:id="@+id/textView_title_com_questions_subfolder"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:text="@string/QuestionTitle"
            android:textSize="@dimen/questions_de_foi_title"
            android:textStyle="bold"
            android:padding="10dip"
            android:textColor="@color/black"
            android:layout_gravity="left|center_vertical"/>
    <!--<ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/header_shadow"
            />-->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
                android:id="@+id/linearLayout_subfolder_com_questions_subfolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

        </LinearLayout>

    </ScrollView>
</LinearLayout>