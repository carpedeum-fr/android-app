<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    >
    <include
        layout="@layout/com_prayers_menu"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background1"
        android:layout_below="@+id/linearLayout_com_prayers_menu"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dip"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                    android:id="@+id/textView_no_results_com_my_prayers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/INFO_NO_RESULTS"
                    android:textColor="@color/black"
                    android:textSize="@dimen/standardText"
                    android:background="@drawable/roundedcorner_yellow"
                    android:layout_marginLeft="@dimen/main_margin"
                    android:layout_marginRight="@dimen/main_margin"
                    android:layout_marginTop="@dimen/main_margin"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/linearLayout_prayers_com_my_prayers"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical" />
                <TextView
                    android:id="@+id/textView_loadmore_com_my_prayers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/LIST_LOAD_MORE"
                    android:padding="@dimen/little_margin"
                    android:textSize="@dimen/standardText"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <Button
                    android:id="@+id/button_create_prayer_com_my_prayers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedcornerquestions_home"
                    android:layout_margin="@dimen/main_margin"
                    android:text="@string/HOME_CREATE_PRAYER"
                    android:textColor="@color/black"
                    android:textSize="@dimen/standardText"
                    android:drawableRight="@drawable/disclosure_silver"
                    android:paddingRight="5dip"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/little_margin"
                    />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>