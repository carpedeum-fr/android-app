<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
    <LinearLayout
        android:id="@+id/linearLayout_prayer_com_prayerbook_prayer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_prayername_com_prayerbook_prayer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/CarnetDePrieres"
            android:textColor="@color/black"
            android:textSize="@dimen/questions_de_foi_title"
            android:layout_margin="10dip"
            android:textStyle="bold"
                />
        <ImageView
            android:id="@+id/imageView_prayerImage_com_prayerbook_prayer"
            android:contentDescription="@string/description"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView_prayer_com_prayerbook_prayer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/ExemplePriere"
            android:textSize="@dimen/Prayer"
            android:textColor="@color/black"
            android:layout_margin="10dip"
                />
        <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gris98"
               />
    </LinearLayout>

</ScrollView>

