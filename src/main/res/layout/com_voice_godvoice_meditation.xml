<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
        >
    <include layout="@layout/com_voice_godvoice_headerbuttons"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
            <TextView
                android:id="@+id/textView_godvoicesrc_com_voice_godvoice_meditation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/voice_title"
                android:layout_marginLeft="@dimen/main_margin"
                android:layout_marginTop="@dimen/little_margin"
                android:textStyle="bold"
                android:layout_gravity="left|center_vertical"/>
            <TextView
                android:id="@+id/textView_med_com_voice_godvoice_mediation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/voice_text_margin"
                android:layout_marginRight="@dimen/voice_text_margin"
                android:layout_marginTop="@dimen/voice_text_margin"
                android:textSize="@dimen/voice_text"
                android:textColor="@color/black" />
            <TextView
                    android:id="@+id/textView_medcredits_com_voice_godvoice_mediation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/voice_text_margin"
                    android:layout_marginRight="@dimen/voice_text_margin"
                    android:textSize="@dimen/voice_text"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:textStyle="italic"
                    />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/grisSeparator"
                    android:layout_marginTop="@dimen/main_margin"
                    />
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dip"
                android:id="@+id/relativeLayout_share_com_voice_godvoice_meditation"
                    >
                <ImageView
                    android:id="@+id/imageView_likes_com_voice_godvoice_meditation"
                    android:layout_height="25dip"
                    android:layout_width="25dip"
                    android:src="@drawable/footer_like"
                    android:contentDescription="@string/footerLike" />
                <TextView
                        android:id="@+id/textview_numLikes_com_voice_godvoice_mediation"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_alignTop="@+id/imageView_likes_com_voice_godvoice_meditation"
                        android:layout_toRightOf="@+id/imageView_likes_com_voice_godvoice_meditation"
                        android:layout_marginLeft="20dip"
                        android:text="@string/Zero"
                        />
                <TextView
                        android:id="@+id/textView_shareicon_com_voice_godvoice_mediation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Partager"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_gravity="right"
                        android:layout_toLeftOf="@+id/imageView_shareicon_com_voice_godvoice_mediation"
                        android:layout_marginRight="15dip"
                        />
                <ImageView
                        android:id="@+id/imageView_shareicon_com_voice_godvoice_mediation"
                        android:layout_height="25dip"
                        android:layout_width="25dip"
                        android:src="@drawable/footer_share"
                        android:contentDescription="@string/footerShare"
                        android:layout_alignParentRight="true"
                        />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/grisSeparator"
                android:layout_marginBottom="@dimen/little_margin" />
            <LinearLayout
                android:id="@+id/linearLayout_comments_com_voice_manvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
            <TextView
                android:id="@+id/textView_addComment_com_voice_manvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/Ajouteruncommentaire"
                android:textSize="@dimen/share"
                android:layout_margin="10dip"
                android:drawableLeft="@drawable/footer_comments"
                android:drawablePadding="@dimen/little_margin" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>