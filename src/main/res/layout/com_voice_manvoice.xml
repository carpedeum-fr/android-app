<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/white"
        >
    <LinearLayout
        android:id="@+id/linearLayout_manvoice_com_voice_manvoice"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/imageView_manVoice_com_voice_manvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/default_voice"
            android:contentDescription="@string/ParoledHomme" />
        <TextView
            android:id="@+id/textView_manVoice_com_voice_manvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="10dip"
            android:textSize="@dimen/voice_text" />
        <TextView
            android:id="@+id/textView_manVoiceAuthor_com_voice_manvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/voice_text"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginBottom="15dip"
            android:gravity="right"
            android:textStyle="italic" />
        <View
                android:layout_height="1dip"
                android:layout_width="match_parent"
                android:background="@color/gris80"
                android:layout_marginTop="10dip"
                />
        <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dip"
                >
            <RelativeLayout
                android:id="@+id/relativeLayout_like_com_voice_manvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/imageView_like_com_manvoice"
                    android:layout_height="25dip"
                    android:layout_width="25dip"
                    android:src="@drawable/footer_like"
                    android:contentDescription="@string/footerLike" />
                <TextView
                    android:id="@+id/textview_numLikes_com_voice_manvoice"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/share"
                    android:layout_alignTop="@+id/imageView_like_com_manvoice"
                    android:layout_toRightOf="@+id/imageView_like_com_manvoice"
                    android:layout_toEndOf="@+id/imageView_like_com_manvoice"
                    android:layout_marginLeft="20dip"
                    android:layout_marginStart="20dip"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/textView_share_com_voice_manvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Partager"
                android:textSize="@dimen/share"
                android:textColor="@color/black"
                android:layout_gravity="right"
                android:layout_toLeftOf="@+id/imageView_shareicon_com_voice_manvoice"
                android:layout_marginRight="15dip"
                    />
            <ImageView
                    android:id="@+id/imageView_shareicon_com_voice_manvoice"
                    android:layout_height="25dip"
                    android:layout_width="25dip"
                    android:src="@drawable/footer_share"
                    android:contentDescription="@string/footerShare"
                    android:layout_alignParentRight="true"
                    />
        </RelativeLayout>
        <View
                android:layout_height="1dip"
                android:layout_width="match_parent"
                android:background="@color/gris80"
                />
        <LinearLayout
            android:id="@+id/linearLayout_comments_com_voice_manvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
        <TextView
            android:id="@+id/textView_addComment_com_voice_manvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/Ajouteruncommentaire"
            android:textSize="@dimen/share"
            android:layout_margin="10dip"
            android:drawableLeft="@drawable/footer_comments"
            android:drawablePadding="@dimen/little_margin" />
    </LinearLayout>
</ScrollView>